<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iteima.mysong.main.mapper.ReviewMapper">
    <select id="GetReviewList" resultType="com.iteima.mysong.pojo.entity.Review">
        select * from review
        <where>
            <if test="search !=null and search!='' ">
                review_songname like concat('%',#{search},'%')
            </if>
            <if test="status !=null">
                and review_status= #{status}
            </if>
        </where>
        <choose>
            <!-- 根据 order 值决定排序 -->
            <when test="sort == 'newest'">
                ORDER BY review_time desc
            </when>
            <when test="sort == 'name'">
                ORDER BY review_songname DESC
            </when>
            <when test="sort == 'type'">
                ORDER BY review_type DESC
            </when>
        </choose>
    </select>

</mapper>